# appearance
font-family = NotoMono Nerd Font Mono
font-size = 12
mouse-hide-while-typing = true

# window
window-decoration = true

# custom keybindings
keybind = ctrl+a>r=reload_config
keybind = ctrl+a>f=toggle_fullscreen

# tmux-like splits
keybind = ctrl+a>v=new_split:right
keybind = ctrl+a>h=new_split:down
keybind = ctrl+a>e=equalize_splits
keybind = ctrl+a>z=toggle_split_zoom
keybind = ctrl+a>[=resize_split:left,50
keybind = ctrl+a>]=resize_split:right,50

# split navigation
keybind = ctrl+a>left=goto_split:left
keybind = ctrl+a>right=goto_split:right
keybind = ctrl+a>down=goto_split:bottom
keybind = ctrl+a>up=goto_split:top
keybind = ctrl+a>;=goto_split:previous
